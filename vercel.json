{
  "buildCommand": "pip install -e .",
  "rewrites": [
    {
      "source": "/api/reactions",
      "destination": "/api/reactions.py"
    },
    {
      "source": "/api/analytics/(.*)",
      "destination": "/api/analytics.py"
    },
    {
      "source": "/api/summarize",
      "destination": "/api/reactions.py"
    },
    {
      "source": "/api/health",
      "destination": "/api/reactions.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}